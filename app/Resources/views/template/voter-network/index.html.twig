{% extends "main.html.twig" %}
{% block sidebar_close %}page-sidebar-closed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload-ui.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div id="voter-container">
                {{ include('tpl/_loading.html.twig')}}
            </div>
        </div>
    </div
{% endblock %}

{% block isReact %}{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js') }}"></script>
  
    <script type="text/javascript">
        window.userId = "{{ user.id }}";
        window.hostIp = "{{ hostIp }}";
    </script>
    
    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/voter-network.react.min.js', 'compiled') }}"></script>
    {% else %}
        <script type="text/babel" src="{{ asset('scripts/voter-network/voter-network-root-create-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/voter-network/voter-network-edit-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/voter-network/voter-network-create-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/voter-network/voter-network.react.js', 'pages') }}"></script>
    {% endif %}
{% endblock %}