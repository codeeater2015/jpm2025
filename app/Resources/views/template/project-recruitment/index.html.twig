{% extends "main.html.twig" %}
{% block sidebar_close %}page-sidebar-closed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div id="page-container">
                {{ include('tpl/_loading.html.twig')}}
            </div>
        </div>
    </div
{% endblock %}

{% block isReact %}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        window.userId = "{{ user.id }}";
        window.hostIp = "{{ hostIp }}";
        window.imgUrl = "{{ imgUrl }}";
    </script>
    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/project-recruitment.react.min.js', 'compiled') }}"></script>
    {% else %}
        <script type="text/babel" src="{{ asset('scripts/voter/voter.edit_modal.react.js', 'pages') }}"></script> 
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment-detail.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment-add-member-kcl2.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment-add-member.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruits.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment-create-kcl1.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment-create.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-recruitment/project-recruitment.react.js', 'pages') }}"></script>
    {% endif %}
{% endblock %}