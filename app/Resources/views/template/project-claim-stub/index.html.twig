{% extends "main.html.twig" %}
{% block sidebar_close %}page-sidebar-closed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div id="page-container">
                {{ include('tpl/_loading.html.twig')}}
            </div>
        </div>
    </div
{% endblock %}

{% block isReact %}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        window.userId = "{{ user.id }}";
        window.hostIp = "{{ hostIp }}";
        window.imgUrl = "{{ imgUrl }}";
        window.reportUrl = "{{ reportUrl }}";
    </script>
    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/project-claim-stub.react.min.js', 'compiled') }}"></script>
    {% else %}
        <script type="text/babel" src="{{ asset('scripts/project-claim-stub/project-claim-stub-create-modal.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-claim-stub/project-claim-stub-datatable.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-claim-stub/index.js', 'pages') }}"></script>
    {% endif %}
{% endblock %}