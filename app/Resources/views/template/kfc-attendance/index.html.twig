    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/kfc-attendance.react.min.js', 'compiled') }}"></script>
    {% else %}
        <script type="text/babel" src="{{ asset('scripts/voter/voter-temporary-create-modal.react.js', 'pages') }}"></script>
