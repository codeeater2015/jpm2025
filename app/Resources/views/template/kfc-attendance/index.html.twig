        <script type="text/babel" src="{{ asset('scripts/kfc-attendance/kfc-attendance-assignment.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/kfc-attendance/kfc-attendance-profile.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/kfc-attendance/kfc-attendance-detail.modal.react.js', 'pages') }}"></script>
