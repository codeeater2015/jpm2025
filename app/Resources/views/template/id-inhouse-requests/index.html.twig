{% extends "main.html.twig" %}
{% block sidebar_close %}page-sidebar-closed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload-ui.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('assets/global/plugins/cropper/cropper.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div id="component-container">
                {{ include('tpl/_loading.html.twig')}}
            </div>
        </div>
    </div
{% endblock %}

{% block isReact %}{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/cropper/cropper.js') }}"></script>

    <script type="text/javascript">
        window.userId = "{{ user.id }}";
        window.hostIp = "{{ hostIp }}";
        window.imgUrl = "{{ imgUrl }}";
    </script>

    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/id-inhouse-requests.react.min.js', 'compiled') }}"></script>
    {% else %}
        
        <script type="text/babel" src="{{ asset('scripts/voter/voter-crop-modal.react.js', 'pages') }}"></script> 
        <script type="text/babel" src="{{ asset('scripts/voter/voter.edit_modal.react.js', 'pages') }}"></script> 
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-request-voter-profile.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-request-detail-datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-request-print-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-request-item-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-requests-detail-view-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-requests-datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/new-id-request-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/id-inhouse-requests/id-inhouse-requests.react.js', 'pages') }}"></script>
    {% endif %}
{% endblock %}