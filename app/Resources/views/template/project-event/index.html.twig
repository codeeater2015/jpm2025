{% extends "main.html.twig" %}
{% block sidebar_close %}page-sidebar-closed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/global/plugins/lightbox/src/css/lightbox.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('assets/global/plugins/jquery-file-upload/css/jquery.fileupload-ui.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('assets/global/plugins/cropper/cropper.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div id="project-event-container">
                {{ include('tpl/_loading.html.twig')}}
            </div>
        </div>
    </div
{% endblock %}

{% block isReact %}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.iframe-transport.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/jquery-file-upload/js/jquery.fileupload.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/select2/js/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/global/plugins/cropper/cropper.js') }}"></script>
    <script src="{{ asset('assets/global/plugins/lightbox/src/js/lightbox.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        window.userId = "{{ user.id }}";
        window.hostIp = "{{ hostIp }}";
        window.imgUrl = "{{ imgUrl }}";
    </script>
    {% if app.environment == "prod" %}
        <script type="text/javascript" src="{{ asset('compiled/js/project-event.react.min.js', 'compiled') }}"></script>
    {% else %}
        <script type="text/babel" src="{{ asset('scripts/voter/voter-temporary-create-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/voter/voter-crop-modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/voter/voter.edit_modal.react.js', 'pages') }}"></script> 
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-attendee-batch.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-attendee.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-detail.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-attendance.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-edit.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event-create.modal.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event.datatable.react.js', 'pages') }}"></script>
        <script type="text/babel" src="{{ asset('scripts/project-event/project-event.react.js', 'pages') }}"></script>
    {% endif %}
{% endblock %}